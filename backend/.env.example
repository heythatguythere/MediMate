# MongoDB Connection String
# Get this from MongoDB Atlas: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/medimate?retryWrites=true&w=majority

# Groq AI API Key
# Get this from: https://console.groq.com
GROQ_API_KEY=gsk_your_api_key_here

# Groq Model (Optional - defaults to llama-3.1-8b-instant)
GROQ_MODEL=llama-3.1-8b-instant

# Google OAuth (Optional - not required for basic functionality)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8081/oauth2/callback/google

# Server Port (Optional - defaults to 8081 locally, Railway will set PORT)
PORT=8081
